{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"],
      "@wasm/*": ["./public/pkg/*"]
    }
  },
  "include": [
        "next-env.d.ts",
        "**/*.ts", "**/*.tsx",
        ".next/types/**/*.ts",
        "./wasm/pkg/*.wasm.d.ts"
    ],
  "exclude": ["node_modules"]
}
